{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "target": "ES6",
    "useDefineForClassFields": true,
    "module": "Node16",
    "moduleResolution": "Node16",
    "lib": [
      "ESNext",
      "DOM"
    ],
    "strict": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "noEmit": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "forceConsistentCasingInFileNames": true,
    "types": [
      "vite/client",
      "node",
      "maginai-game-types"
    ],
  },
  "include": [
    "src",
    "tests"
  ],
  "exclude": [
    "node_modules",
    ".history/**"
  ]
}
